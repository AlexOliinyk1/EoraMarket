@{
    ViewBag.Title = "Shop";
}
@section scripts{
    @Scripts.Render("~/Scripts/ViewModels/shopViewModel.js")
}
@section styles{
    <link href="~/Content/ShopStyles.css" rel="stylesheet" />
}
<h2>Shop</h2>

<div id="productContainer" class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-9" data-bind="foreach: goods">
        <div class="productCard">
            @*<img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/331810/sample57.jpg" alt="sample57" />*@
            <img data-bind="attr:{src: $data.imageUrl, alt: $data.name}" />
            <div>
                <h3 id="prodName" data-bind="text: $data.name"></h3>
                <p id="prodDescription" data-bind="text: $data.description"></p>
                <div class="price">
                    <span id="prodPrice" data-bind="text: $data.price">19.00</span>
                </div>
            </div>
            <a href="#"><i class="ion-android-cart"></i></a>
        </div>
    </div>
</div>
